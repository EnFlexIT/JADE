# Makefile for JADE project - examples/jess directory

# The following targets are not file names
.PHONY: all clean

BATCH = makeall.bat
JC = javac
JFLAGS = -deprecation
TARGETS = JessAgent.java

all: 
	@echo Making test examples
	$(JC) $(JFLAGS) -classpath $(CLASSPATH):../..:../../../classes $(TARGETS)

clean:
	rm -f `find . -name '*~' -print`
	rm -f `find . -name '#*#' -print`

batch:
	rm -f $(BATCH)
	echo '@REM ===============================================================' > $(BATCH)
	echo '@REM =           Generated by JADE Makefile. DO NOT EDIT           =' >> $(BATCH)
	echo '@REM ===============================================================' >> $(BATCH)
	echo >> $(BATCH)
	echo '$(JC) $(JFLAGS) -classpath %CLASSPATH%;..\..;..\..\..\classes $(subst /,\,$(TARGETS))' >> $(BATCH)
	echo >> $(BATCH)
